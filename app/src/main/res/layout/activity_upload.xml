<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.activity.UploadActivity">

  <include layout="@layout/include_toolbar"
      android:id="@+id/upload_toolbar"/>

  <RelativeLayout android:layout_width="match_parent"
      android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <cn.edu.cqupt.nmid.headline.ui.widget.ProgressBarCircular
          android:id="@+id/progressBarCircularIndeterminate"
          android:layout_width="32dp"
          android:visibility="gone"
          android:layout_height="32dp"
          android:background="#1E88E5"/>

      <ImageView
          android:id="@+id/activity_upload_select"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="centerCrop"/>

      <ImageView
          android:id="@+id/ivLike"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="center"
          android:src="@drawable/ic_heart_outline_white"/>

    </FrameLayout>

  </RelativeLayout>



  <Button
      android:id="@+id/activity_upload_upload"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="#1E88E5"
      android:text="select_image"/>


</LinearLayout>