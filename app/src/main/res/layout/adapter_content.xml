<?xml version="1.0" encoding="utf-8"?>


<view xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    class="android.support.v7.widget.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:id="@+id/item_card_holder"
    android:layout_marginRight="8dp"
    android:layout_marginTop="6dp"
    android:theme="@style/CardView.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:maxLines="1"
                android:singleLine="true"
                android:text="标题"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/item_excerpt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_title"
                android:maxLength="60"
                android:maxLines="3"
                android:text="又一家中国公司要赴美上市，虽然这家名“芯原”IC设计公司大家不熟悉，但他是给谷歌等互联网公司定制芯片的，也给很多中国公司定制芯片"
                android:textSize="12sp" />


            <ImageView
                android:id="@+id/item_image1"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="false"
                android:layout_below="@+id/item_title"
                android:layout_toRightOf="@+id/item_excerpt"
                android:src="@drawable/bg_navigation_drawer" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/item_three_images_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_image2"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                android:src="@drawable/bg_navigation_drawer" />

            <ImageView
                android:id="@+id/item_image3"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/bg_navigation_drawer" />

            <ImageView
                android:id="@+id/item_image4"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/bg_navigation_drawer" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/clock"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/clock"
                android:text="12小时前"
                android:textSize="14sp" />

            <Button
                android:id="@+id/collect"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="收藏" />

            <Button
                android:id="@+id/share"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/collect"
                android:text="分享" />
        </RelativeLayout>

    </LinearLayout>


</view>

