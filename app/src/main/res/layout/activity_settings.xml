<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/include_toolbar" />

    <!--账号管理（管理微博和微信等等第三方账号）--><!--选择字体--><!--文章字体大小--><!--流量控制（全图模式、文本模式、智能模式—仅wifi下加载图片     无图模式（开关）--><!--要闻推送（开关）--><!--清除缓存--><!--夜间模式--><!--i 关于——用户反馈——推荐给好友——检查更新-->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="cn.edu.cqupt.nmid.headline.ui.activity.SettingsActivity$PlaceholderFragment">


        <include
            android:id="@+id/settings_account"
            layout="@layout/include_settings_item" />

        <include layout="@layout/include_divider" />

        <!--<ToggleButton >-->
        <include
            android:id="@+id/settings_push_news"
            layout="@layout/include_item_switch" />

        <include layout="@layout/include_divider" />

        <!--<ToggleButton >-->
        <include
            android:id="@+id/settings_night_mode"
            layout="@layout/include_item_switch" />

        <include layout="@layout/include_divider" />

        <include
            android:id="@+id/settings_font_size"
            layout="@layout/include_settings_item" />

        <include layout="@layout/include_divider" />

        <include
            android:id="@+id/settings_data_saving"
            layout="@layout/include_settings_item" />

        <include layout="@layout/include_divider" />


        <include
            android:id="@+id/settings_clen_cache"
            layout="@layout/include_settings_item" />

        <include layout="@layout/include_divider" />


        <include
            android:id="@+id/settings_about"
            layout="@layout/include_settings_item" />

        <include layout="@layout/include_divider" />


    </LinearLayout>


</LinearLayout>


